@model Nsu.Belov.TrainsDatabase.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <h2>Необходимо войти</h2>

        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new {@class = "form-horizontal"}))
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(x => x.ReturnUrl)
            <div class="form-group">
                <label class="col-sm-2 control-label">Логин</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Login, new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group">

                <label class="col-sm-2 control-label">Пароль</label>
                <div class="col-sm-10">
                    @Html.PasswordFor(x => x.Password, new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-6">
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>
                <div class="col-sm-offset-2 col-sm-6">
                    <a href="@Url.Action("Register")" class="btn btn-default">Зарегистрироваться</a>
                </div>
            </div>
        }
    </div>
</div>